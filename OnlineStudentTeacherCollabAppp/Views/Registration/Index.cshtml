
@{
    ViewBag.Title = "Index";
}


<style>

    .center_div {
        margin: 0 auto;
        width: 40% /* value of your choice which suits your alignment */
    }
</style>

<div class=" container center_div">

    <form action="/Registration/Create" method="post">
        <h2>Rgistration Form</h2>

        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="Name" value="" placeholder="Enter you name">
            @* @Html.ValidationMessage("Title", htmlAttributes: new { @class = "text-danger" })*@
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="Title" value="" placeholder="Enter your valid email">
            @* @Html.ValidationMessage("Title", htmlAttributes: new { @class = "text-danger" })*@
        </div>


        <div class="form-group">
            <label>Password</label>
            <input type="text" class="form-control" name="Title" value="" placeholder="Enter your password">
            @* @Html.ValidationMessage("Title", htmlAttributes: new { @class = "text-danger" })*@
        </div>

        <div class="form-group">
            <label>Confirm Password</label>
            <input type="text" class="form-control" name="Title" value="" placeholder="Re-enter your password">
            @* @Html.ValidationMessage("Title", htmlAttributes: new { @class = "text-danger" })*@
        </div>


        <button type="submit" class="btn btn-primary">Register</button>

        

    </form>
    <div>
        <br />
        <a href="/Login/Index">I have alredy an account</a>
    </div>

</div>

