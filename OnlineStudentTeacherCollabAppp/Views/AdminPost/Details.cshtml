
@model OnlineStudentTeacherCollabAppp.Models.ViewModel.CategoryPostVM



<style>
    .content {
        margin: 0 35%;
        width: 45%;
    }
</style>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="card-title"> Details of Post</h3>
                        </div>

                    </div>

                    <div class="card-body p-0" style="width:40%">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th style="width: 250px">Id</th>
                                    <td>@Model.Post.Id</td>
                                </tr>

                                <tr>
                                    <th style="width: 250px">Post Title</th>
                                    <td>@Model.Post.Title</td>
                                </tr>
                                <tr>
                                    <th style="width: 250px">Category</th>
                                    <td>
                                        @foreach (var ctg in @Model.Categories)
                                        {

                                            @(Model.Post.Category_id == ctg.Id ? ctg.Name : "")

                                        }
                                    </td>

                                </tr>
                                <tr>
                                    <th style="width: 250px">Author</th>
                                   @* <td>@Model.Post.User_id</td>*@

                                    <td>
                                        @foreach (var u in @Model.UsersList)
                                        {

                                            @(Model.Post.User_id == u.Id ? u.Name : "")

                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th style="width: 250px">Status</th>
                                    <td>@Model.Post.Status</td>
                                </tr>
                                <tr>
                                    <th style="width: 250px">Description</th>
                                    <td>
                                        @Model.Post.Description
                                    </td>
                                </tr>

                            </tbody>

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


